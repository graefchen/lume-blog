---
layout: layouts/base.vto
---

<article class="md">
	<section>
		<h1>{{ title }}</h1>
		<p>
			<time datetime="{{ date |> date('DATETIME') }}">
			{{ date |> date('HUMAN_DATE') }}
			</time>
		</p>
		<blockquote>
			{{ excerpt |> md }}
		</blockquote>
	</section>
	<section>
		{{ content }}
	</section>
</article>